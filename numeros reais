public class numerosreais {
    public static void main(String[] args) {
  
        double numero1 = 1.5;
        double numero2 = 2.1;

        double soma = numero1 + numero2;
        double subtracao = numero1 - numero2;
        double multiplicacao = numero1 * numero2;
        double divisao = numero1 / numero2;

        System.out.println("A soma de " + numero1 + " e " + numero2 + " é: " + soma);
        System.out.println("A subtração de " + numero1 + " por " + numero2 + " é: " + subtracao);
        System.out.println("A multiplicação de " + numero1 + " por " + numero2 + " é: " + multiplicacao);
        System.out.println("A divisão de " + numero1 + " por " + numero2 + " é: " + divisao);
    }
}
